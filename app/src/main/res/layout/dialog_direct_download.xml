<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_umn_tv_download_center_new"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="30dp"
    android:theme="@style/Theme.AppCompat.DayNight">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_progress_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- --"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_size_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- --"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Wait ..."
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        android:progress="0"
        android:progressBackgroundTint="#ffff"
        android:progressTint="#ffff"
        tools:progress="50" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:elevation="2dp"
        android:background="@drawable/selector_download"
        android:text="Cancel"
        android:textColor="#ffff" />
</LinearLayout>