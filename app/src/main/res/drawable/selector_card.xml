<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:drawable="@color/default_background" android:state_pressed="true" />

    <!-- focused -->
    <item android:drawable="@color/detail_background" android:state_focused="true" />

    <!-- hovered -->
    <item android:drawable="@color/detail_background" android:state_hovered="true" />

    <!-- selected -->
    <item android:drawable="@color/detail_background" android:state_selected="true" />

    <!-- default -->
    <item android:drawable="@color/default_background" />
</selector>